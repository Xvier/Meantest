extends layout

block content
    .container
        .section
            .row
                .col.m12
                    h1 Hello This is the Contact form
    .container
        .section
                form.col.m12
                    .row
                        .input-field.col.m6
                            input(id="first_name",type="text",class="validate")
                            label(for="first_name") First Name
                        .input-field.col.m6
                            input(id="last_name",type="text",class="validate")
                            label(for="last_name") Last Name
                    .row
                        .input-field.col.m12
                            input.validate(id="passwords", type="password")
                            label(for="passwords") Password
                    .row
                        .input-field.col.m12
                            textarea(id="textarea" class="materialize-textarea")
                            label(for="textarea") TextArea
                    .row
                        button.btn.waves-effect.waves-light(type="submit" name="action") Submit
                            i.material-icons.right send

